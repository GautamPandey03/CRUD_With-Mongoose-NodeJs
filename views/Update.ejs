<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title>Update_Employee</title>
</head>

<body>
    <%- include('header/nav');%>
        <div class="container">
            <div class="float-start">
                <a href="/show" class="btn btn-warning ">Back</a>
            </div>
            <% if (employee.length<1) {%>
                <div class="p-3 text-center mb-2 bg-danger text-white">Sorry No Record Found</div>
                <% } else{%>
                    <h3 class="text-center text-info">Update Employee</h3>

                    <% employee.forEach(item=>{%>
                        <form action="/updateEmployee/<%=item._id%>" method="post" class="my-5">

                            <div class="row my-2">

                                <div class="col-2">
                                    <h5>Name</h5>
                                </div>
                                <div class="col-6 ">
                                    <input type="text" name="name" value='<%=item.name%>'>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-2">
                                    <h5>Age</h5>
                                </div>
                                <div class="col-6">
                                    <input type="number" name="age" value=<%=item.age%> >
                                </div>

                            </div>
                            <div class="row my-2">
                                <div class="col-2">
                                    <h5>Salary</h5>
                                </div>
                                <div class="col-6">
                                    <input type="text" name="salary" value="<%=item.salary%>" required>
                                </div>
                            </div>
                            <div class="row my-2">
                                <div class="col-2">
                                    <h5>Position</h5>
                                </div>
                                <div class="col-6">
                                    <input type="text" name="position" value="<%=item.position%>" required>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-2">
                                    <h5>Department</h5>
                                </div>
                                <div class="col-6">
                                    <input type="text" name="Department" value='<%=item.Department%>' readonly>
                                </div>

                            </div>
                            <div class="row my-5">
                                <div class="col-6 text-center">
                                    <button class="btn btn-success">Update</button>
                                    <a href="/" class="btn btn-danger mx-2">Cancel</a>
                                </div>


                            </div>
                            <% }) %>
                                <%}%>
                        </form>
        </div>
</body>

</html>